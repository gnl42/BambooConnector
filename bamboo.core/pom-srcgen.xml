<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>
    <groupId>me.glindholm.mylyn.bamboo</groupId>
    <artifactId>me.glindholm.mylyn.bamboo.bamboo.srcgen</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.11.0</version>
                <configuration>
                    <release>17</release>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.openapitools</groupId>
                <artifactId>openapi-generator-maven-plugin</artifactId>
                <version>7.1.0</version>
                <configuration>
                    <generatorName>java</generatorName>
                    <logToStderr>false</logToStderr>
                    <verbose>false</verbose>
                    <output>src-gen</output>
                    <verbose>false</verbose>
                    <httpUserAgent>Bamboo Connector: ${project.version}</httpUserAgent>
                    <generateModelTests>false</generateModelTests>
                    <generateApiTests>false</generateApiTests>
                    <library>native</library>
                    <groupId>${project.groupId}</groupId>
                    <artifactId>${project.artifactId}</artifactId>
                    <artifactVersion>${project.version}</artifactVersion>
                    <skipValidateSpec>false</skipValidateSpec>
                    <skipOperationExample>true</skipOperationExample>
                    <generateModelDocumentation>false</generateModelDocumentation>
                    <generateApiDocumentation>false</generateApiDocumentation>
                    <addCompileSourceRoot>true</addCompileSourceRoot>
                    <additionalProperties>
                        <additionalProperty>supportUrlQuery=false</additionalProperty>
                    </additionalProperties>
                    <skipIfSpecIsUnchanged>true</skipIfSpecIsUnchanged>
                    <configOptions>
                        <sourceFolder>.</sourceFolder>
                        <annotationLibrary>swagger2</annotationLibrary>
                        <generateApiDocumentation>false</generateApiDocumentation>
                        <generateModelDocumentation>false</generateModelDocumentation>
                        <openApiNullable>true</openApiNullable>
                        <asyncNative>false</asyncNative>
                        <dateLibrary>java11</dateLibrary>
                        <developerName>George Lindholm</developerName>
                        <developerOrganization>self</developerOrganization>
                        <serializableModel>true</serializableModel>
                        <useJakartaEe>true</useJakartaEe>
                        <hideGenerationTimestamp>true</hideGenerationTimestamp>

                        <apiPackage>
                            me.glindholm.mylyn.bamboo.internal.rest.api</apiPackage>
                        <invokerPackage>
                            me.glindholm.mylyn.bamboo.internal.rest.invoker</invokerPackage>
                        <modelPackage>
                            me.glindholm.mylyn.bamboo.internal.rest.model</modelPackage>
                        <modelNamePrefix></modelNamePrefix>
                    </configOptions>
                </configuration>
                <executions>
                    <execution>
                        <id>bamboo</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>
                                ${basedir}/openapi/bamboo-1.123.1.json</inputSpec>
                        </configuration>
                    </execution>
                    <execution>
                        <id>logfile</id>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <inputSpec>
                                ${basedir}/openapi/logfile.json</inputSpec>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <!-- Swagger -->
        <dependency>
            <groupId>org.openapitools</groupId>
            <artifactId>jackson-databind-nullable</artifactId>
            <version>0.2.6</version>
        </dependency>
        <!-- dependencies are needed for the client being generated -->
        <dependency>
            <groupId>io.swagger.core.v3</groupId>
            <artifactId>swagger-annotations</artifactId>
            <version>2.2.19</version>
        </dependency>
        <!-- JSON processing: jackson -->
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-jsr310</artifactId>
            <version>2.15.3</version>
        </dependency>
        <dependency>
            <groupId>jakarta.annotation</groupId>
            <artifactId>jakarta.annotation-api</artifactId>
            <version>2.1.1</version>
        </dependency>
    </dependencies>
</project>